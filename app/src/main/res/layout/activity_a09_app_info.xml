<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".Activitys.A09AppInfo">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="صلوات شمار"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Version 1.0.0"
            android:textColor="@color/White"
            android:textSize="18sp" />


        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Developed by: \nMaryam Ghafouri Vernosfaderani"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Student Number : 972244046"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/created_for"
            android:textColor="@color/White"
            android:textSize="18sp" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:text="@string/created_for_Des"
            android:textColor="@color/White"
            android:textSize="18sp" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/git"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_github_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="© 2019 - 2020"
            android:textColor="@color/White"
            android:textSize="18sp" />


    </LinearLayout>

</RelativeLayout>