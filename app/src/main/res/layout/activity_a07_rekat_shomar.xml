<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.A07RekatShomar">

    <ImageView
        android:id="@+id/act_main_img_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/main_bg"
        />

    <Button
        android:id="@+id/act_main_btn_reset"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/drw_btn_reset"
        android:text="@string/str_actmain_btn_reset"
        android:textSize="25dp"
        android:textColor="#ffffff"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/act_main_btn_reset"
        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:id="@+id/act_main_img_frame_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/empty_frame"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/act_main_txt_rokat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="رکعت اول"
                android:textColor="#012e02"
                android:layout_alignTop="@+id/act_main_img_frame_empty"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                />
            <TextView
                android:id="@+id/act_main_txt_sajde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:text="سجده اول"
                android:textColor="#012e02"
                android:layout_alignBottom="@+id/act_main_img_frame_empty"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp"
                />
            <ImageView
                android:id="@+id/act_main_img_frame_filled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/filled_frame"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>